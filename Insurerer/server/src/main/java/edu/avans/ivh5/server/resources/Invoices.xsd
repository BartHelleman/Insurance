<?xml version="1.0" encoding="UTF-8"?>

<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="invoices">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="invoice" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element type="xs:integer" name="invoiceNumber"/>
                            <xs:element type="xs:date" name="date"/>
                            <xs:element type="xs:date" name="expirationDate"/>
                            <xs:element type="xs:decimal" name="VAT"/>
                            <xs:element type="xs:string" name="treatmentStatus"/>
                            <xs:element type="xs:string" name="BSN"/>
                            <xs:element type="xs:string" name="clientName"/>
                            <xs:element type="xs:string" name="clientAddress"/>
                            <xs:element type="xs:string" name="clientPostcodeCity"/>
                            <xs:element type="xs:string" name="companyName"/>
                            <xs:element type="xs:string" name="companyAddress"/>
                            <xs:element type="xs:string" name="companyPostcodeCity"/>
                            <xs:element type="xs:string" name="companyKVK"/>
                            <xs:element type="xs:string" name="amountSessions"/>
                            <xs:element type="xs:string" name="pricePerSession"/>
                            <xs:element type="xs:string" name="treatmentCode"/>
                            <xs:element type="xs:string" name="deductible"/>
                            <xs:element type="xs:string" name="amountToPay"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>